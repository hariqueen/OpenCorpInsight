<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.corpIns.mapper.UserMapper">
    <select id="selectUserByEmail" parameterType="string" resultType="com.corpIns.dto.User">
        SELECT user_sno as userSno, email, password_hash as passwordHash
        FROM users
        WHERE email = #{email}
    </select>

    <insert id="insertUser" parameterType="map">
        INSERT INTO users
        (email, password_hash)
        VALUES
        (#{email}, #{password_hash})
    </insert>
</mapper>

